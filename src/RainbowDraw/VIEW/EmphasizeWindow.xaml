<Window x:Class="RainbowDraw.VIEW.EmphasizeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RainbowDraw.VIEW"
        mc:Ignorable="d"
        Title="AccentWindow" Height="300" Width="300" AllowsTransparency="True" Background="Transparent" WindowStyle="None" Focusable="False"
        Loaded="Window_Loaded" Icon="../IMG/RainbowPen.ico"
        >
    <Border BorderThickness="5" CornerRadius="250" Margin="30" Focusable="False">
        <Border.BorderBrush>
            <LinearGradientBrush EndPoint="1,1" StartPoint="0,0">
                <GradientStop Color="#FFFF5D00" Offset="0"/>
                <GradientStop Color="#FF5DFF00" Offset="1"/>
            </LinearGradientBrush>
        </Border.BorderBrush>
        <Border.Effect>
            <BlurEffect Radius="20" RenderingBias="Quality"/>
        </Border.Effect>
    </Border>
</Window>
